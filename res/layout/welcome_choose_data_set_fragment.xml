<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/welcome_background">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/data_set_title"
    android:id="@+id/data_set_title"
    android:layout_gravity="center"
    style="@android:style/TextAppearance.DeviceDefault.Large"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:textColor="@color/welcome_foreground"
    android:textStyle="bold" />

  <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/data_set_list"
    android:layout_weight="1" />

  <com.google.android.gms.maps.MapView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:name="com.google.android.gms.maps.MapFragment"
    android:id="@+id/data_set_map"
    android:layout_weight="1"
    android:layout_margin="16dp" />
</LinearLayout>