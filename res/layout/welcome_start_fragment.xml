<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/welcome_background">

  <ImageView
    android:layout_width="148dp"
    android:layout_height="148dp"
    android:id="@+id/welcome_logo"
    android:layout_gravity="center"
    android:textColor="@color/welcome_foreground"
    android:src="@drawable/ic_launcher"
    android:layout_marginTop="@dimen/welcome_logo_vert_margin"
    android:layout_marginBottom="@dimen/welcome_logo_vert_margin"
    android:contentDescription="@string/knowtime_short_name" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/welcome_is_free"
    android:id="@+id/welcome_text_free"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/welcome_text_vert_margin"
    android:layout_marginBottom="@dimen/welcome_text_vert_margin"
    android:textColor="@color/welcome_foreground"
    android:textSize="24dp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/welcome_no_signup"
    android:id="@+id/welcome_text_no_signup"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/welcome_text_vert_margin"
    android:layout_marginBottom="@dimen/welcome_text_vert_margin"
    android:textColor="@color/welcome_foreground"
    android:textSize="24dp" />
</LinearLayout>